<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

	<androidx.cardview.widget.CardView
			android:layout_width="0dp"
			android:layout_height="@dimen/frame_64"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintHorizontal_bias="0.5"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:cardCornerRadius="12dp"
			app:cardPreventCornerOverlap="true"
			android:clipToPadding="true"
			android:alwaysDrawnWithCache="true"
			android:animateLayoutChanges="true"
			android:animationCache="true"
			android:id="@+id/main_cv_ipnga">


		<FrameLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@drawable/color_blue_gradient_light">

			<androidx.constraintlayout.widget.ConstraintLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					>

				<FrameLayout
						style="@style/IconFrame48"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintTop_toTopOf="parent"
						app:layout_constraintBottom_toBottomOf="parent"
						android:id="@+id/frameLayout"
						android:layout_marginStart="16dp">

					<ImageView
							style="@style/IconStandard.FitCenter.Center.AdjustViewBounds"
							android:src="@drawable/icon_players"
							/>
				</FrameLayout>

				<TextView
						style="@style/White.Size20"
						android:text="@string/add_new_player"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						app:layout_constraintBottom_toBottomOf="parent"
						android:layout_marginBottom="16dp"
						android:id="@+id/textView11"
						app:layout_constraintTop_toTopOf="parent"
						android:layout_marginTop="16dp"
						app:layout_constraintStart_toEndOf="@+id/frameLayout"
						app:layout_constraintEnd_toEndOf="parent"
						android:layout_marginEnd="16dp"
						app:layout_constraintHorizontal_bias="0.0"
						android:layout_marginStart="16dp"/>
			</androidx.constraintlayout.widget.ConstraintLayout>
		</FrameLayout>

	</androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>