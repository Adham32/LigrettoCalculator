<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonFacebook" parent="@android:style/Widget.DeviceDefault.Button">
        <item name="android:background">@drawable/shape_btn_fb</item>
        <item name="android:textColor">@color/facebook_blue</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">46dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:minWidth">64dp</item>
    </style>

    <style name="ButtonGoogle" parent="@android:style/Widget.DeviceDefault.Button">
        <item name="android:background">@drawable/shape_btn_google</item>
        <item name="android:textColor">@color/google_red</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">46dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:minWidth">64dp</item>
    </style>


    <style name="ButtonMainDarkBlue" parent="@android:style/Widget.DeviceDefault.Button">
        <item name="android:background">@drawable/shape_btn_main_blue_dark</item>
        <item name="android:textColor">@color/white_def</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/boogaloo</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:minWidth">240dp</item>
        <item name="android:height">48dp</item>
    </style>

</resources>