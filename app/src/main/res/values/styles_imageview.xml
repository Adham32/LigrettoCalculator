<?xml version="1.0" encoding="utf-8"?>
<resources>

	// Size Standard 24x24
	<style name="IconStandard">
		<item name="android:layout_width">@dimen/icon_s</item>
		<item name="android:layout_height">@dimen/icon_s</item>
	</style>

	<style name="IconStandard.FitCenter">
		<item name="android:scaleType">fitCenter</item>
	</style>

	<style name="IconStandard.FitCenter.Center">
		<item name="android:layout_gravity">center</item>
	</style>

	<style name="IconStandard.FitCenter.Center.AdjustViewBounds">
		<item name="android:adjustViewBounds">true</item>
	</style>

</resources>